# Access service baseline configuration - Version 6
# These settings are common across all environments
# Changes from v1: Increased retries, added circuit breaker settings

# Common API configuration
API_VERSION=2.1
REQUEST_TIMEOUT_MS=5000
MAX_RETRIES=5
RETRY_BACKOFF_MS=1000

# Feature flags (common defaults)
ENABLE_LOGGING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Performance settings
CONNECTION_POOL_SIZE=50
MAX_CONNECTIONS=100

# Circuit breaker (new in v6)
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT_MS=30000
